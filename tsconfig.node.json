{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "sourceMap": false,
        "noEmit": false,
        "target": "ES2018",
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "declarationDir": null,
        "esModuleInterop": true,
        "outDir": "./dist"
    },
    "include": ["."],
    "exclude": [
        "dist",
        "types",
        "src"
    ]
}